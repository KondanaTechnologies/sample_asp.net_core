@using System.Security.Claims
@{
    ViewData["Title"] = "User Profile";
}

<table class="table">
    <thead>
        <tr>
            <th>
                Claim
            </th>
            <th>
                Value
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in ((ClaimsIdentity)User.Identity).Claims)
        {
            <tr>
                <td>@claim.Type</td>
                <td>@claim.Value</td>
            </tr>
        }
    </tbody>
</table>